<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageAnuncio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/bottom_bar" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <TextView
        android:id="@+id/textNomeTopo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="monospace"
        android:text="nome filme"
        android:textColor="@color/CorLetras"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textTopoGenero"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textTopoGenero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="monospace"
        android:text="genero"
        android:textColor="@color/CorLetras"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textTopoData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="monospace"
        android:text="data"
        android:textColor="@color/CorLetras"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textTopoGenero"
        app:layout_constraintStart_toEndOf="@+id/textTopoGenero"
        app:layout_constraintTop_toTopOf="@+id/textTopoGenero" />

    <ImageView
        android:id="@+id/imageFilmeCard1"
        android:layout_width="96dp"
        android:layout_height="192dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/imageFilmeCard2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <ImageView
        android:id="@+id/imageFilmeCard2"
        android:layout_width="96dp"
        android:layout_height="192dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageFilmeCard1"
        app:layout_constraintEnd_toStartOf="@+id/imageFilmeCard3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageFilmeCard1"
        app:layout_constraintTop_toTopOf="@+id/imageFilmeCard1"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <ImageView
        android:id="@+id/imageFilmeCard3"
        android:layout_width="96dp"
        android:layout_height="192dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageFilmeCard2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageFilmeCard2"
        app:layout_constraintTop_toTopOf="@+id/imageFilmeCard2"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <ImageView
        android:id="@+id/imageFilmeCard6"
        android:layout_width="96dp"
        android:layout_height="192dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageFilmeCard5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageFilmeCard5"
        app:layout_constraintTop_toTopOf="@+id/imageFilmeCard5"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <ImageView
        android:id="@+id/imageFilmeCard4"
        android:layout_width="96dp"
        android:layout_height="192dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/imageFilmeCard5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageFilmeCard1"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <ImageView
        android:id="@+id/imageFilmeCard5"
        android:layout_width="96dp"
        android:layout_height="192dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageFilmeCard4"
        app:layout_constraintEnd_toStartOf="@+id/imageFilmeCard6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageFilmeCard4"
        app:layout_constraintTop_toTopOf="@+id/imageFilmeCard4"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <TextView
        android:id="@+id/TextCardFilme1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="nome"
        android:textColor="@color/CorLetras"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textCardData1"
        app:layout_constraintEnd_toEndOf="@+id/imageFilmeCard1"
        app:layout_constraintStart_toStartOf="@+id/imageFilmeCard1" />

    <TextView
        android:id="@+id/TextCardFilme2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="nome"
        android:textColor="@color/CorLetras"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textCardData"
        app:layout_constraintEnd_toEndOf="@+id/imageFilmeCard2"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="@+id/imageFilmeCard2" />

    <TextView
        android:id="@+id/TextCardFilme3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="nome"
        android:textColor="@color/CorLetras"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textCardData2"
        app:layout_constraintEnd_toEndOf="@+id/imageFilmeCard3"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toStartOf="@+id/imageFilmeCard3" />

    <TextView
        android:id="@+id/TextCardFilme4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="nome"
        android:textColor="@color/CorLetras"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textCardData3"
        app:layout_constraintEnd_toEndOf="@+id/imageFilmeCard4"
        app:layout_constraintStart_toStartOf="@+id/imageFilmeCard4" />

    <TextView
        android:id="@+id/TextCardFilme5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
