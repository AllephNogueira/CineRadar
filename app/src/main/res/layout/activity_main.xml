        android:fontFamily="monospace"
        android:text="nome"
        android:textColor="@color/CorLetras"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textCardData5"
        app:layout_constraintEnd_toEndOf="@+id/imageFilmeCard6"
        app:layout_constraintStart_toStartOf="@+id/imageFilmeCard6" />

    <TextView
        android:id="@+id/textCardData1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="data"
        android:textColor="@color/CorLetras"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageFilmeCard1"
        app:layout_constraintEnd_toEndOf="@+id/TextCardFilme1"
        app:layout_constraintStart_toStartOf="@+id/TextCardFilme1" />

    <TextView
        android:id="@+id/textCardData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="data"
        android:textColor="@color/CorLetras"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageFilmeCard2"
        app:layout_constraintEnd_toEndOf="@+id/TextCardFilme2"
        app:layout_constraintStart_toStartOf="@+id/TextCardFilme2" />

    <TextView
        android:id="@+id/textCardData2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="data"
        android:textColor="@color/CorLetras"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageFilmeCard3"
        app:layout_constraintEnd_toEndOf="@+id/TextCardFilme3"
        app:layout_constraintStart_toStartOf="@+id/TextCardFilme3" />

    <TextView
        android:id="@+id/textCardData3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="data"
        android:textColor="@color/CorLetras"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageFilmeCard4"
        app:layout_constraintEnd_toEndOf="@+id/TextCardFilme4"
        app:layout_constraintStart_toStartOf="@+id/TextCardFilme4" />

    <TextView
        android:id="@+id/textCardData4"
        android:layout_width="wrap_content"
